<h1>Create a new Superhero</h1>

<%= simple_form_for(@superhero) do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :superpower%>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<div>
  <%= link_to "Go back to Superheros", superheros_path %>
</div>
