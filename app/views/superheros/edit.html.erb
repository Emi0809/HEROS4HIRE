<h1>Edit your Superhero</h1>


<div class="container">
  <div class="card-create-form">
    <%= simple_form_for(@superhero) do |f| %>
      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :price %>
        <%= f.input :superpower%>
        <%= f.input :description %>
        <%= f.input :photo_url %>
        <%= f.input :address %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, class: "form-actions", value: "Add Superhero" %>
      </div>
    <% end %>
  </div>
</div>
