<h1 class="super-heading">HEROES-4-HIRE</h1>

<div class="new_hero">
  <%= link_to "Add a Superhero", new_superhero_path, class:"add-hero"%>
</div>

<div class="superheros">
  <div class="cards">
    <% @superheros.each do |superhero| %>
      <div class="card">
      <%= link_to superhero_path(superhero) do %>
        <img src="<%= superhero.photo_url %>" alt="<%= superhero.name %>">
        <% end %>
        <div class="card-text">
          <div class="info">
            <h2><%= superhero.name.upcase %></h2>
            <p><strong>Superpower:</strong> <%= superhero.superpower %></p>
            <p><strong>Price:</strong> Â£<%= superhero.price %></p>
          </div>
          <%= link_to "More Info",  superhero_path(superhero), class:"info-button"%>
        </div>
      </div>
    <% end %>
  </div>
</div>
